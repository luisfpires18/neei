@model NEEI.Models.SubAcao
@{
    ViewBag.Title = "Adicionar Sub-Acção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "SubAcao"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.descricao)
        @Html.TextBoxFor(m => m.descricao, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.receita)
        @Html.TextBoxFor(m => m.receita, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.despesa)
        @Html.TextBoxFor(m => m.despesa, new { @class = "form-control" })
    </div>

    <input type="hidden" id="acaoId" name="acaoId" value="@ViewBag.IdAcao">
    @Html.HiddenFor(m => m.id)


    @Html.ActionLink("Voltar atrás", "Index", "SubAcao", new { id = ViewBag.IdAcao }, new { @class = "btn btn-primary" })
    <button type="submit" class="btn btn-primary">Adicionar</button>
}
