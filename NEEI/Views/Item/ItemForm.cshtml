@model NEEI.Models.Item
@{
    ViewBag.Title = "Adicionar Item em " ViewBag.Categoria;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Item"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Descricao)
        @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Titular)
        @Html.TextBoxFor(m => m.Titular, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Receita)
        @Html.TextBoxFor(m => m.Receita, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Despesa)
        @Html.TextBoxFor(m => m.Despesa, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Quantidade)
        @Html.TextBoxFor(m => m.Quantidade, new { @class = "form-control" })
    </div>


    <input type="hidden" id="categoriaId" name="categoriaId" value="@ViewBag.IdCategoria">
    @Html.HiddenFor(m => m.Id)


    @Html.ActionLink("Voltar atrás", "Index", "Item", new { id = ViewBag.IdCategoria }, new { @class = "btn btn-primary" })
    <button type="submit" class="btn btn-primary">Adicionar</button>
}
